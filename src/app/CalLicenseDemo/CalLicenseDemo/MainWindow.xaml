<Window x:Class="CalLicenseDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalLicenseDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <Button x:Name="button" Content="Make Payment" HorizontalAlignment="Left" VerticalAlignment="Top" Width="190" Margin="20,50,0,0" Click="button_Click"/>
        <Popup x:Name="pp" Placement="Center">
            <local:PaymentOption/>
        </Popup>
    </Grid>
</Window>
